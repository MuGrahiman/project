    <div class="container my-5 p-1 head">
      <div class="card">
        <div class="card-header d-flex">
          <div class="col-10">
            <h1>Manage your Product</h1>

          </div>
          <div class="col-2 text-center d-grid">
            <a class="btn btn-sm btn-outline-secondary my-auto" type="button" href="/admin-product-add">Add</a>
          </div>
        </div>
        <div class="card-body">
          <div class="row card-title justify-content-between">
            <div class="col-md-2 col-3  "><b> Image</b></div>
            <div class="col-md-2 col-3 "><b> Name</b></div>
            <!-- <div class="col-md-2 col-3  d-none d-md-block"><b> Customers</b></div> -->
            <div class="col-md-2 col-3  d-none d-md-block"><b> Cost</b></div>
            <div class="col-md-2 col-3 "><b> Details</b></div>
            <div class="col-md-2 col-3 "><b> Status</b></div>
            <hr>

          </div>
          <%product.forEach(product=>{ %>

            <div class="row  justify-content-between align-items-center">
              <div class="col-md-2 col-3 py-2 align-items-center">
                <div class="shadow-lg ">
                  <img src="<%=product.img.url%>" class="img-fluid rounded shadow-lg" alt="">
                </div>
              </div>
              <div class="col-md-2 col-3 ">
                <%= product.title%>
              </div>
              <!-- <div class="col-md-2 col-3  d-none d-md-block text-center">Customer</div>   -->

              <div class="col-md-2 col-3  d-none d-md-block">
                <%= product.cost %>
              </div>
              <div class="col-md-2 col-3 p-1">

                <div class="d-grid col-3 ">
                  <a href="/admin-product/<%=product._id %>" type="button"
                    class="btn btn-sm btn-outline-primary text-decoration-none ">Details</a>
                </div>

              </div>
              <div class="col-md-2 col-3 p-1">
                <div class="d-grid col-3  p-0">
                  <% if(product.delete==false){%>
                    <a href="/product-block/<%=product._id %>" type="button"
                      class="btn btn-sm btn-outline-danger text-decoration-none ">Block</a>
                    <%}else{%>
                      <a href="/product-unblock/<%=product._id %>" type="button"
                        class="btn btn-sm btn-outline-success text-decoration-none ">UnBlock</a>
                      <%}%>
                </div>
              </div>
            </div>
            <%})%>

        </div>
      </div>
    </div>

