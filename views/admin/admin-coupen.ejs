<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- css -->
    <link rel="stylesheet" href="../../public/css/admin/admin-coupen.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

                       <!-- font link -->
    <!-- zen dots -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Dots&display=swap" rel="stylesheet">
    <!-- odibee -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Odibee+Sans&display=swap" rel="stylesheet">
    <title>Document</title>

</head>

<body>   
  <%- include('partials/navadmin') %>

    <div class="container my-5">
  
        <div class=" col-8 d-sm-flex m-auto mb-5 gap-4">
          <div class="col m-auto text-light text-md-end   justify-items-center">
          <h4>Add New Coupen</h4>
          </div>
          <div class="col-sm-3 d-grid">
          <button class="btn btn-outline-success" type="submit" data-bs-toggle="modal" data-bs-target="#addCoupen"
            data-bs-whatever="@mdo" >ADD</button>
          </div>
        </div>
        <% if(locals.err) {%>
          <small class="fw-lighter text-danger d-flex justify-content-center mb-2 fst-italic"><%= locals.err%></small>
      <%}%>
        <!-- ---------------------------add modal------------------------- -->
        <div class="modal fade" id="addCoupen" tabindex="-1" aria-labelledby="exampleModalLabel0"
          aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel0">ADD NEW COUPEN</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/add-coupen" method="post">
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Title:</label>
                    <input type="text" class="form-control" name="title" id="recipient-name" placeholder="Enter The Title" required>
                  </div>
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Code:</label>
                    <input type="text" class="form-control" name="code" id="recipient-name" placeholder="Enter The Code Name" required>
                  </div>
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Discount:</label>
                    <input type="text" class="form-control" name="discount" id="recipient-name" placeholder="Enter The Discount" required>
                  </div>
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Created Date:</label>
                    <input type="text" class="form-control text-dark" name="created" id="recipient-name" 
                    value="<%= new Date(Date.now()).toISOString().slice(0,10) %>" required>
                  </div>
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Expiry Date:</label>
                    <input type="date" class="form-control" name="expiry" id="recipient-name" placeholder="Enter The Expiry Date" required>
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" href="">UPDATE</button>
                  </div>
                </form>
              </div>
              
            </div>
          </div>
        </div>
        <!-- ------------------------------added coupen modal---------------------------- -->
      <div class="col-8 m-auto border border-light rounded ">
  
        <% coupen.forEach(coupen=>{ %>
          <div class="d-lg-flex gap-2 m-3">
            <div class="col-lg-8">
              <input type="text" class="form-control" name="" id="" value="<%=coupen.title%>" disabled
                required>
  
            </div>
            <div class="col d-flex gap-2 mt-1 mt-lg-0">
              <div class="col d-grid ">
              <button type="submit" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#<%=coupen.code%>">Edit</button>
  
              <div class="modal" id="<%=coupen.code%>" tabindex="-1" aria-labelledby="exampleModalLabel1"
                aria-hidden="true" aria-describedby="exampleModalLabel1">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel1">EDIT</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <form action="/coupen-update/<%=coupen._id %>" method="post">
                        <div class="mb-3">
                          <label for="name" class="col-form-label">Title:</label>
                          <input type="text" class="form-control" name="title" id="name" placeholder="<%=coupen.title%>">
                        </div>
                        <div class="mb-3">
                          <label for="code" class="col-form-label">Code:</label>
                          <input type="text" class="form-control" name="code" id="code" placeholder="<%=coupen.code%>">
                        </div>
                        <div class="mb-3">
                          <label for="discount" class="col-form-label">Discount:</label>
                          <input type="text" class="form-control" name="discount" id="discount" placeholder="<%=coupen.discount%>">
                        </div>
                        <div class="mb-3">
                          <label for="created" class="col-form-label">Created Date:</label>
                          <input type="text" class="form-control text-dark" name="created" id="created" 
                          value="<%= new Date(Date.now()).toISOString().slice(0,10) %>">
                        </div>
                        <div class="mb-3">
                          <label for="expiry" class="col-form-label">Expiry Date:</label>
                          <input type="text" class="form-control" name="expiry" id="expiry" placeholder="<%=coupen.expiry.getDate()+'/'+coupen.expiry.getMonth()+1+'/'+coupen.expiry.getFullYear()%>">
                        </div>

                        <div class="modal-footer">
                          <button type="submit" class="btn btn-primary" href="">UPDATE</button>
                        </div>
                      </form>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col d-grid  gap-2">
              <% if(coupen.delete==false){%>
                  <a href="/coupen-block/<%=coupen._id %>" method="post" type="button"
                    class="btn btn-outline-danger text-decoration-none ">Block</a>
                <%}else{%>
                  <a href="/coupen-unblock/<%=coupen._id %>" type="button"
                        class="btn btn-outline-danger text-decoration-none ">UnBlock</a>
                  <%}%>
            </div>
          </div>
        </div>
          <%})%>
      </div>
  
    </div>
  
  
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"></script>
  
  </body>
  
  </html>
