        <% if(locals.messege) {%>
    <script>
            let timeRemaining = localStorage.getItem("timeRemaining") || 60; // retrieve the time remaining from local storage or set it to 60 seconds
        const interval = setInterval(() => {
            let m = Math.floor(timeRemaining / 60);
            let s = timeRemaining % 60;
            m = m < 10 ? '0' + m : m;
            s = s < 10 ? '0' + s : s;

            timeRemaining--; // decrease the time remaining by 1 second
            localStorage.setItem("timeRemaining", timeRemaining);
            document.getElementById('time').innerHTML = m + ':' + s;

            if (timeRemaining <= 0) {
                clearInterval(interval); // stop the timer when it reaches 0
                localStorage.removeItem("timeRemaining"); // remove the time remaining from local storage

                document.getElementById("btnres").style.display = "block";
                document.getElementById("btnsub").style.display = "none";
                document.getElementById("timer").style.display = "none";
            }
        }, 1000); // run the interval every 1000 milliseconds (1 second)

    </script>
    <%}%>
            <script>
        function cleartime() {
            localStorage.removeItem("timeRemaining");
            clearInterval(interval);
        }
        document.getElementById("btnres").addEventListener("click", () => {
            localStorage.setItem("timeRemaining", 60);
            window.location = 'http://localhost:3010/sign-up';

        });

    </script>

