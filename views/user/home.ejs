<script>
        product = document.querySelectorAll('.product_id');

     function category(id) {
            // alert(id)
            let arra = [];
          for (let i = 0; i < product.length; i++) {
            arra.push(product[i].value);
          }
          $.ajax({
            url: '/subcate/'+id,
            method: 'GET',
